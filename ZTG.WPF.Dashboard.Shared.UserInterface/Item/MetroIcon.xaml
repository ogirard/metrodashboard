<UserControl x:Class="ZTG.WPF.Dashboard.Shared.UserInterface.Item.MetroIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="24"
             Height="24"
             MinWidth="16"
             MinHeight="16">
  <Border Margin="0"
          Background="{Binding IconBackground,
                               RelativeSource={RelativeSource FindAncestor,
                                                              AncestorType={x:Type UserControl}}}"
          BorderThickness="0"
          CornerRadius="{Binding IconCornerRadius,
                                 RelativeSource={RelativeSource FindAncestor,
                                                                AncestorType={x:Type UserControl}}}"
          Padding="2">
    <Viewbox x:Name="_viewBox" Visibility="Collapsed" />
  </Border>
</UserControl>
