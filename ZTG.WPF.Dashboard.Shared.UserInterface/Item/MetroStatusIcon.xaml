<UserControl x:Class="ZTG.WPF.Dashboard.Shared.UserInterface.Item.MetroStatusIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="48"
             Height="48"
             MinWidth="12"
             MinHeight="12">
  <Border x:Name="_border"
          Margin="0"
          Background="{Binding IconBackground,
                               RelativeSource={RelativeSource FindAncestor,
                                                              AncestorType={x:Type UserControl}}}"
          BorderThickness="0"
          CornerRadius="{Binding IconCornerRadius,
                                 RelativeSource={RelativeSource FindAncestor,
                                                                AncestorType={x:Type UserControl}}}"
          Padding="6">
    <Viewbox x:Name="_viewBox" Visibility="Collapsed" />
  </Border>
</UserControl>
